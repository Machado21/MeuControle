<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gabri.meucontrole.CadastroActivity">

    <EditText
        android:id="@+id/nome_pessoa_cad_et"
        style="@style/Campos"
        android:inputType="textPersonName"
        android:hint="Nome" />

    <EditText
        android:id="@+id/cpf_pessoa_cad_et"
        style="@style/Campos"
        android:inputType="number"
        android:hint="CPF" />

    <EditText
        android:id="@+id/email_cad_et"
        style="@style/Campos"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/senha_pessoa_cad_et"
        style="@style/Campos"
        android:hint="Senha"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirm_senha_pessoa_et"
        style="@style/Campos"
        android:hint="Confirme a Senha"
        android:inputType="textPassword" />

    <TextView
        style="@style/Campos"
        android:gravity="center_horizontal"
        android:text="Cadastrar-se e "
        android:textSize="20dp" />

    <LinearLayout
        style="@style/Campos"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cadastrar_loja_cad_p_bt"
            style="@style/Campos"
            android:layout_width="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:hint="Criar uma Loja" />

        <Button
            android:id="@+id/entrar_loja_cad_p_bt"
            style="@style/Campos"
            android:layout_width="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:hint="Entrar em uma loja" />

    </LinearLayout>

</LinearLayout>
